{
  "firestore": {
      "rules": "firestore.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      { "source":"**", "headers": [{"key": "Cache-Control", "value": "no-cache"}] }
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/",
        "destination": "/recorder/index.html",
        "type": 303
      },
      {
        "source": "login",
        "destination": "/login",
        "type": 301
      },
      {
        "source": "recorder",
        "destination": "/recorder",
        "type": 302
      },
      {
        "source": "share",
        "destination": "/share",
        "type": 304
      },
      {
        "source": "home",
        "destination": "/home",
        "type": 305
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  }
}

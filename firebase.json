{
  "firestore": {
    "rules": "firestore.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "login",
        "destination": "/login",
        "type": 301
      },
      {
        "source": "recorder",
        "destination": "/recorder",
        "type": 302
      }
    ]
  }
}